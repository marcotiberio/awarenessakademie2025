{% if posts|length > 0 %}
  <flynt-component 
    load:on="visible" 
    name="ListingFeatProjects" 
    class=""
    style="
      color: {% if options.colorText %}{{ options.colorText }}{% else %}var(--black){% endif %};
      background-color: {% if options.pageBackground %}{{ options.pageBackground }}{% else %}transparent{% endif %};">
    <div class="boxed">
      <div class="flex flex-col md:flex-row gap-sm">
        {% for post in posts %}
          <a 
            class="w-full md:w-1/4 flex-wrap [&_img]:hover:invert" 
            href="{{ post.link }}" 
            aria-label="{{ post.title }}">
            <div class="post w-full h-auto flex flex-col gap-xs justify-between items-center" >
              {% if post.thumbnail %}
                <img 
                  class="lazyload transition duration-200 ease-in-out h-[250px] md:h-[300px] object-cover" 
                  src="{{ post.thumbnail.src }}"
                  data-srcset="{{function('wp_get_attachment_image_srcset', post.thumbnail.id)}}"
                  data-sizes="auto"
                  alt="{{ post.title }}">
              {% endif %}
              <div class="content w-full h-full flex flex-col md:flex-row justify-start">
                <div class="w-full font-h3 !mb-0">{{ post.title }}</div>
              </div>
            </div>
          </a>
        {% endfor %}
      </div>
    </div>
  </flynt-component>
{% endif %}
