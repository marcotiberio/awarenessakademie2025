<ul class="menu w-full flex flex-row flex-wrap gap-lg justify-between items-center">
  {% for item in items %}
    <li class="{{ item.classes | join(' ') }} font-bodyMenu text-white flex justify-start {{- item.current ? ' current-menu-item underline underline-offset-[5px]' }}">
      <a class="link !mb-0 flex items-center hover:underline hover:underline-offset-[5px] transition-transform duration-200 ease-in-out" href="{{ item.link }}" {{ item.target == '_blank' ? 'target="_blank" rel="noopener noreferrer"' }}>
        {{ item.title }}
      </a>
    </li>
  {% endfor %}
</ul>
