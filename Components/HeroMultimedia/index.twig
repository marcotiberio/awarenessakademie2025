<flynt-component
  load:on="visible"
  name="HeroMultimedia" 
  class="mb-0" 
  style="
    color: {% if options.colorText %}{{ options.colorText }}{% else %}var(--black){% endif %};">
  <div data-ref="slider" class="slider swiper-container w-full h-full">
    <script type="application/json">{{ jsonData|json_encode }}</script>
    <div class="swiper-wrapper w-full h-full">
      {% for item in sliderHeroItems %}
        <div class="mx-auto slider-item swiper-slide w-full h-[calc(100vh_-_66px)] flex flex-col bg-grey">
          <figure class="figure aspect-9/16 lg:aspect-video me-0">
            <img class="hidden lg:block figure-image lazyload h-full w-full object-cover"
              src="{{ item.image.src | resize(32) }}"
              data-srcset="{{ function('wp_get_attachment_image_srcset', item.image.id) }}"
              data-sizes="auto"
              alt="{{ item.image.alt|e }}">
            <img class="block lg:hidden figure-image lazyload h-full w-full object-cover"
              src="{{ item.imageMobile.src | resize(32) }}"
              data-srcset="{{ function('wp_get_attachment_image_srcset', item.imageMobile.id) }}"
              data-sizes="auto"
              alt="{{ item.imageMobile.alt|e }}">
          </figure>
          {# <figure class="figure w-auto h-[165px] sm:h-[350px] md:h-[500px] mx-auto relative">
