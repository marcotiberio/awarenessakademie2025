{% if posts|length > 0 %}
<flynt-component 
  load:on="visible" 
  name="BlockBoxes2" 
  class="" 
  style="background-color: {% if options.colorBackground %}{{ options.colorBackground }}{% else %}transparent{% endif %}; ">
  <div class="wrapper" style="color: {% if options.colorText %}{{ options.colorText }}{% else %}var(--black){% endif %};">
     {% if blockTitle %}
      <div class="max-w-screen-lg mx-auto font-heroSubtitle text-center mb-md sm:mb-lg">
        {{ blockTitle }}
      </div>
    {% endif %}
    <div class="wrapper flex flex-col lg:flex-row align-top justify-between">
      <a class="content-left lg:w-1/2 flex flex-col lg:flex-row p-xs lg:p-sm border-y-0.5 lg:border-y border-x-0.5 hover:bg-black hover:text-white" href="{{ buttonLinkLeft.url }}" {% if buttonLinkLeft.target %} target="{{ buttonLinkLeft.target }}" rel="noreferrer noopener"{% endif %}>
        <div class="lg:w-4/5">
          {% if boxTitleLeft %}
            {{ boxTitleLeft }}
          {% endif %}
          <div class="wysiwyg">  
            {% if contentHtmlLeft %}
              {{ contentHtmlLeft|e('wp_kses_post') }}
            {% endif %}
          </div>
        </div>
        <div class="w-full lg:w-1/5 mt-sm flex items-end justify-end">
          <button class="button button--link">
            {{ buttonLinkLeft.title }}
          </button>
        </div>
      </a>

      {# Static Content #}
      {% if showRandomPost == 0 %}
      <a class="content-right lg:w-1/2 flex flex-col lg:flex-row p-xs lg:p-sm border-y-0.5 lg:border-y border-x-0.5 hover:bg-black hover:text-white" href="{{ buttonLinkRight.url }}" {% if buttonLinkRight.target %} target="{{ buttonLinkRight.target }}" rel="noreferrer noopener"{% endif %}>
        <div class="lg:w-4/5">
          {% if boxTitleRight %}
            {{ boxTitleRight }}
          {% endif %}
          <div class="wysiwyg">  
            {% if contentHtmlRight %}
              {{ contentHtmlRight|e('wp_kses_post') }}
            {% endif %}
          </div>
        </div>
        <div class="w-full lg:w-1/5 mt-sm flex items-end justify-end">
          <button class="button button--link">
            {{ buttonLinkRight.title }}
          </button>
        </div>
      </a>
      {% endif %}

      {# Glossar Term #}
      {% if showRandomPost == 1 %}
      {% for post in posts %}
        <a class="content-right post lg:w-1/2 flex flex-col lg:flex-row p-xs lg:p-sm border-y-0.5 lg:border-y border-x-0.5 hover:bg-black hover:text-white" href="{{ labels.glossarButtonLink.url }}" {% if labels.glossarButtonLink.target %} target="{{ labels.glossarButtonLink.target }}" rel="noreferrer noopener"{% endif %}>
          <div class="lg:w-4/5 flex flex-col">
            <div>{{ labels.glossarBoxTitle }}</div>
            <div class="font-h1">{{ post.title }}</div>
            <div class="wysiwyg">{{ post.explanation|striptags }}</div>
          </div>
          <div class="w-full lg:w-1/5 mt-sm flex items-end justify-end">
            <button class="button button--link">
              {{ labels.glossarButtonLink.title }}
            </button>
          </div>
        </a>
      {% endfor %}
      {% endif %}

    </div>
  </div>
</flynt-component>
{% endif %}
