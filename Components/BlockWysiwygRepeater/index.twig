<flynt-component 
  load:on="visible" 
  name="BlockWysiwygRepeater" 
  class="" 
  style="background-color: {% if options.colorBackground %}{{ options.colorBackground }}{% else %}transparent{% endif %};">
  <div class="wrapper boxed" style="color: {% if options.colorText %}{{ options.colorText }}{% else %}var(--black){% endif %};">
     {% if blockTitle %}
      <div class="max-w-screen-lg mx-auto font-heroSubtitle text-center mb-md sm:mb-lg">
        {{ blockTitle }}
      </div>
    {% endif %}
    <div class="wrapper boxed !p-0 grid sm:grid-cols-2 lg:grid-cols-4 gap-lg sm:gap-md lg:gap-xs">
      {% for item in repeaterTextHtml %}
        <div class="w-full flex flex-col gap-xs justify-start items-start">
          <div class="w-full h-full flex flex-col justify-start items-start">
            <div class="font-body !mb-0 h-[48px]">{{ item.columnTitle }}</div>
            {% if item.textHtml %}
              <div class="wysiwyg">{{ item.textHtml|e('wp_kses_post') }}</div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
